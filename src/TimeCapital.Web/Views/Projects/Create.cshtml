@{
    Layout = null;
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Criar Projeto</title>
    <style>
        body { font-family: Arial; padding:40px; background:#f5f5f5; }
        .card {
            background:white;
            padding:30px;
            border-radius:12px;
            max-width:400px;
            box-shadow:0 10px 30px rgba(0,0,0,0.05);
        }
        input {
            width:100%;
            padding:10px;
            margin-bottom:15px;
        }
        button {
            padding:10px 20px;
            background:#34d399;
            border:none;
            color:white;
            border-radius:8px;
            cursor:pointer;
        }
    </style>
</head>
<body>

<div class="card">
    <h2>Novo Projeto</h2>

    <form method="post">
        <input name="title" placeholder="Nome do projeto" />
        <button type="submit">Salvar</button>
    </form>
</div>

</body>
</html>
