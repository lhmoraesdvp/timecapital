@model TimeCapital.Web.Controllers.ProjectsIndexVm
@{
    ViewData["Title"] = "Projetos";
}

<!doctype html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>TimeCapital ‚Äî Projetos</title>

    <style>
        :root{
            --bg: #fdfcf9;
            --card: #ffffff;
            --border: #eceae4;

            --text: #475569;
            --text-strong: #0f172a;
            --muted: #94a3b8;

            --mango: #f47280;
            --plant: #34d399;

            --shadow: 0 14px 38px rgba(15, 23, 42, 0.06);
            --radius: 20px;
        }

        *{ box-sizing:border-box; }

        body{
            margin:0;
            min-height:100vh;
            background:
                radial-gradient(1100px 560px at 18% -8%, rgba(244,114,128,.12), transparent 58%),
                radial-gradient(900px 520px at 92% 10%, rgba(52,211,153,.12), transparent 55%),
                var(--bg);
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, system-ui, sans-serif;
            color: var(--text-strong);
            padding: 30px 18px 56px;
        }

        .container{
            max-width: 980px;
            margin: 0 auto;
        }

        .top{
            display:flex;
            justify-content:space-between;
            align-items:flex-end;
            gap: 12px;
            margin-bottom: 16px;
        }

        .kicker{
            font-size: 11px;
            letter-spacing:.2px;
            color: var(--muted);
            margin-bottom: 8px;
        }

        h1{
            margin:0;
            font-size: 26px;
            line-height: 1.1;
            letter-spacing: -0.3px;
            font-weight: 650;
        }

        .subtitle{
            margin: 8px 0 0;
            color: var(--text);
            font-size: 13px;
            line-height: 1.55;
            max-width: 70ch;
        }

        .actions{
            display:flex;
            gap:10px;
            align-items:center;
        }

        .btn{
            border:none;
            border-radius: 999px;
            display:inline-flex;
            align-items:center;
            justify-content:center;
            cursor:pointer;
            user-select:none;
            padding: 10px 14px;
            font-weight: 650;
            font-size: 13px;
            text-decoration:none;
            transition: transform .18s ease, filter .18s ease, background .18s ease;
            white-space:nowrap;
        }
        .btn:active{ transform: scale(.98); }

        .btnPrimary{
            background: linear-gradient(135deg, var(--plant), rgba(110,231,183,.95));
            box-shadow: 0 12px 26px rgba(52,211,153,.18);
            color:#fff;
        }

        .btnSecondary{
            background: rgba(148,163,184,.14);
            color: var(--text-strong);
            border: 1px solid rgba(148,163,184,.22);
        }

        .card{
            background: var(--card);
            border: 1px solid var(--border);
            border-radius: var(--radius);
            box-shadow: var(--shadow);
            padding: 16px;
        }

        .toolbar{
            display:flex;
            align-items:center;
            justify-content:space-between;
            gap: 10px;
            margin-bottom: 12px;
        }

        .hint{
            font-size: 12px;
            color: var(--muted);
        }

        /* form */
        .formRow{
            display:flex;
            gap:10px;
            align-items:center;
            margin-bottom: 14px;
        }

        .input{
            flex:1;
            border: 1px solid var(--border);
            border-radius: 14px;
            padding: 10px 12px;
            font-size: 13px;
            outline: none;
            background: rgba(255,255,255,.85);
        }
        .input:focus{
            border-color: rgba(52,211,153,.45);
            box-shadow: 0 0 0 4px rgba(52,211,153,.10);
        }

        .list{
            display:flex;
            flex-direction:column;
            gap: 10px;
        }

        .row{
            border: 1px solid var(--border);
            border-radius: 16px;
            padding: 12px;
            display:flex;
            justify-content:space-between;
            align-items:center;
            background: rgba(248,250,252,.55);
            gap: 12px;
        }

        .rowLeft{
            display:flex;
            align-items:center;
            gap: 10px;
            min-width:0;
        }

        .badge{
            width: 34px;
            height: 34px;
            border-radius: 14px;
            background: rgba(96,165,250,.16);
            border: 1px solid rgba(96,165,250,.22);
            flex:0 0 auto;
        }

        .rowTitle{
            font-weight:650;
            font-size: 13px;
            overflow:hidden;
            text-overflow:ellipsis;
            white-space:nowrap;
            color: var(--text-strong);
        }

        .empty{
            border: 1px solid var(--border);
            background: rgba(255,255,255,.75);
            border-radius: 14px;
            padding: 10px 12px;
            font-size: 12px;
            color: var(--text);
            margin-top: 10px;
        }

        details summary{
            list-style: none;
            cursor: pointer;
            user-select:none;
        }
        details summary::-webkit-details-marker{ display:none; }
    </style>
</head>

<body>
<div class="container">
    <div class="top">
        <div>
            <div class="kicker">TimeCapital ‚Ä¢ Cadastro</div>
            <h1>Projetos</h1>
            <p class="subtitle">Adicionar e listar projetos do usu√°rio (MVC). Pr√≥ximo passo: editar/excluir e definir padr√£o aqui tamb√©m.</p>
        </div>

        <div class="actions">
            <a class="btn btnSecondary" href="/dashboard">Voltar</a>
        </div>
    </div>

    <section class="card">
        <div class="toolbar">
            <div style="font-size:13px;color:var(--text-strong);font-weight:650;">Seus projetos</div>
            <div class="hint">Criar √© instant√¢neo (POST /projects)</div>
        </div>

        <!-- Form: criar projeto -->
        <form method="post" action="/projects" class="formRow" autocomplete="off">
            <input class="input"
                   type="text"
                   name="title"
                   placeholder="Nome do projeto (ex: Estudar ingl√™s)"
                   maxlength="120"
                   required />

            <button class="btn btnPrimary" type="submit">+ Adicionar</button>
        </form>

        @if (Model.Projects == null || !Model.Projects.Any())
        {
            <div class="empty">Nenhum projeto cadastrado ainda. Crie o primeiro acima üôÇ</div>
        }
        else
        {
            <div class="list" role="list" aria-label="Lista de projetos">
                @foreach (var p in Model.Projects)
                {
                    <div class="row" role="listitem">
                        <div class="rowLeft">
                            <span class="badge"></span>
                            <div style="min-width:0;">
                                <div class="rowTitle">@p.Title</div>
                            </div>
                        </div>

                        <div style="font-size:12px;color:var(--muted);white-space:nowrap;">
                            @p.Id
                        </div>
                    </div>
                }
            </div>
        }
    </section>
</div>
</body>
</html>
