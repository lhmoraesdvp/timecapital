@model TimeCapital.Web.ViewModels.CreateAreaViewModel


@{
    ViewData["Title"] = "Nova Área";
}

<h2 class="mb-3">Nova Área</h2>

<form method="post" action="/areas/create" class="card p-3">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label class="form-label">Nome</label>
        <input class="form-control" asp-for="Name" autocomplete="off" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Cor (opcional)</label>
        <input class="form-control" asp-for="Color" placeholder="mango | plant | sky" />
        <span class="text-danger" asp-validation-for="Color"></span>
    </div>

    <div class="d-flex gap-2">
        <button class="btn btn-primary" type="submit">Criar</button>
        <a class="btn btn-outline-secondary" href="/areas">Cancelar</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
